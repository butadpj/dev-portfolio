---
import Layout from "../layouts/Root.astro";
import Navbar from "../sharedComponents/Navbar/Navbar";
import MomentumScroll from "../sharedComponents/MomentumScroll/MomentumScroll";
import Hero from "./HomeSections/Hero";
import BgCircles from "../sharedComponents/BgCircles.astro";
import Projects from "./HomeSections/Projects/Projects";
import About from "./HomeSections/About";
import Contact from "./HomeSections/Contact";
import Learn from "./HomeSections/Learn";

import { getCollection } from "astro:content";

const projects = await getCollection("projects");
const blogs = await getCollection("blogs");
---

<Layout title="butadpj - I am a Developer.">
  <Navbar client:load />

  <MomentumScroll client:load>
    <BgCircles />

    <Hero />
    <About client:load />
    <Projects projects={projects} />
    <Learn blogs={blogs} />

    <Contact />
  </MomentumScroll>
</Layout>
